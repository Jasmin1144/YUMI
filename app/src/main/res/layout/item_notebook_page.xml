<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notebook_page_background">

    <!-- Page lines -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notebook_lines"
        android:alpha="0.3"/>

    <!-- Content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Media container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/mediaImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <!-- Animated placeholder when no media -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/placeholderAnimation"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/dream_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Kyoto"
            android:textSize="24sp"
            android:fontFamily="@font/kalam_bold"
            android:textColor="@color/ghibli_brown"
            android:layout_marginBottom="8dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walk through the bamboo groves and visit ancient temples"
            android:textSize="16sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/ghibli_shadow"
            android:lineSpacing="4dp"/>

        <!-- Decorative doodle -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_doodle_star"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:alpha="0.3"/>

    </LinearLayout>

</RelativeLayout>
