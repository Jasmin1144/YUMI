<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Paper base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/notebook_paper"/>
        </shape>
    </item>

    <!-- Horizontal lines -->
    <item android:top="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="1dp"
                android:color="@color/notebook_lines"
                android:dashWidth="1000dp"
                android:dashGap="30dp"/>
        </shape>
    </item>

    <!-- Red margin line -->
    <item
        android:left="60dp"
        android:right="320dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FF6B6B"/>
        </shape>
    </item>

    <!-- Subtle paper texture -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#05000000"
                android:endColor="#00000000"
                android:type="radial"
                android:gradientRadius="500dp"/>
        </shape>
    </item>
</layer-list>
