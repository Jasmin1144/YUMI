<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layers -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Spiral holes -->
    <!-- FIXED: Commented out the next line because the 'spiral_holes' drawable is missing -->
    <!-- <item android:drawable="@drawable/spiral_holes" /> -->

    <!-- Notebook paper appearance -->
    <item android:left="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Red line on the left -->
    <item android:left="30dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="line">
            <stroke android:width="1dp" android:color="#FFDDDD" />
        </shape>
    </item>
</layer-list>